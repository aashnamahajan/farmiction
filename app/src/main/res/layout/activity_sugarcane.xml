<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ViewFlipper
        android:id="@+id/viewFlipper_aboutNatcon"
        android:layout_width="match_parent"
        app:layout_heightPercent="40%"
        android:autoStart="true"
        android:flipInterval="2000"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/farm"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/farming1"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pranika"
            android:scaleType="centerCrop" />

    </ViewFlipper>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewFlipper_aboutNatcon">
        <TextView
            android:padding="16dp"
            android:layout_below="@id/viewFlipper_aboutNatcon"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="sugarcane: \n\n
temp:32 to 38 \n\n
rainfall:1100 to 1500mm  \n\n
soil:loamy  \n\n
surface:level	\n\n
labour:medium  \n\n
season:summer   \n\n  "/> </ScrollView>


</android.support.percent.PercentRelativeLayout>


